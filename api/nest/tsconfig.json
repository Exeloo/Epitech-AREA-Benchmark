{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "@type/*": ["src/common/types/*"],
      "@utils/*": ["src/common/utils/*"],
      "@exception": ["src/common/exception"],
      "@domain/*": ["src/domain/*"],
      "@d-type/*": ["src/domain/common/types/*"]
    }
  }
}
